<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:weightSum="2"
    android:paddingTop="10dp"
    android:orientation="horizontal"
    android:background="#f8fcf5"
    android:paddingBottom="10dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/textView3"
        android:layout_width="140dp"
        android:layout_height="80dp"

        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
       android:background="@drawable/logo"
        android:textAlignment="center"
        android:textAllCaps="true"

        />




    <!--<Button-->
    <!--android:id="@+id/insta"-->
    <!--android:layout_width="40dp"-->
    <!--android:layout_height="40dp"-->

    <!--android:layout_margin="5dp"-->
    <!--android:layout_marginBottom="8dp"-->
    <!--android:layout_marginEnd="8dp"-->
    <!--android:layout_marginStart="8dp"-->
    <!--android:layout_marginTop="16dp"-->

    <!--android:background="@drawable/instagram"-->
    <!--app:layout_constraintBottom_toTopOf="@+id/textView4"-->
    <!--app:layout_constraintEnd_toEndOf="parent"-->
    <!--app:layout_constraintHorizontal_bias="0.67"-->
    <!--app:layout_constraintStart_toStartOf="parent"-->
    <!--app:layout_constraintTop_toTopOf="parent"-->
    <!--app:layout_constraintVertical_bias="1.0" />-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentStart="true"
        android:gravity="right"
        android:orientation="horizontal"
        android:weightSum="2"
        android:id="@+id/relativeLayout3"
        android:layout_alignParentLeft="true">

        <Button
            android:id="@+id/facebook"
            android:layout_width="40dp"
            android:layout_height="43dp"

            android:layout_centerVertical="true"
            android:layout_marginEnd="44dp"
            android:layout_marginRight="44dp"
            android:layout_toLeftOf="@+id/insta"

            android:layout_toStartOf="@+id/insta"
            android:layout_weight="1"
            android:background="@drawable/faceeee"
            android:gravity="right" />


        <ImageView
            android:id="@+id/insta"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/facebook"
            android:layout_gravity="left"

            android:layout_marginEnd="32dp"
            android:layout_weight="1"
            android:background="@drawable/insttt"
            android:layout_alignParentRight="true"
            android:layout_marginRight="32dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textView3"
        android:id="@+id/relativeLayout2"
        android:layout_alignLeft="@+id/textView3">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="35dp"

            android:layout_alignParentTop="true"


            android:layout_marginTop="105dp"
            android:background="@drawable/border"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="3dp"
            android:text="Tel: +92 300 0225 587"
           android:textColor="#fff"
            android:textColorHint="#000"
            android:textSize="12sp" />


    </RelativeLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="228dp"
        android:layout_height="35dp"

        android:layout_alignBottom="@+id/relativeLayout2"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/relativeLayout2"
        android:background="@drawable/border"

        android:gravity="center"
        android:text="Visit Website for more Details"
        android:textColor="#fff"
        android:textSize="13sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/relativeLayout2" />

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:layout_alignStart="@+id/relativeLayout2"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginTop="5dp"
        android:background="@drawable/logos"
        android:id="@+id/imageView"
        android:layout_alignLeft="@+id/relativeLayout2" />

    <TextView
        android:layout_width="310dp"
        android:layout_height="35dp"


        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/imageView"
        android:background="@drawable/border"

        android:gravity="center"
        android:paddingLeft="5dp"
        android:textSize="13dp"
       android:layout_marginRight="10dp"
        android:text="Developed By INNOVATORS TECHNOLOGIES"
        android:textAlignment="center"
        android:textColor="#fff"
        android:layout_alignParentRight="true" />

</RelativeLayout>