<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#dadad9"
android:fillViewport="false"
    tools:context="com.itpvt.footlib.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#ecfdde"

        android:layout_height="wrap_content">
        <include layout="@layout/toolbar">
        </include>
    </LinearLayout>

    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginTop="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt"
        android:text="Featured"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="#0f178f"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView

                android:id="@+id/img1"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:text="Featured Image 1"
                android:textColor="#fff"


                />

            <TextView

            android:layout_marginTop="10dp"

            android:id="@+id/img2"
            android:layout_width="150dp"
            android:layout_height="102dp"
            android:layout_marginLeft="20dp"
            android:text="Featured Image 2"
            android:textColor="#fff"
            android:gravity="center"

            android:background="@drawable/border"


            />
            <TextView

                android:layout_marginTop="10dp"

                android:id="@+id/img2_1"
                android:layout_width="150dp"
                android:layout_height="102dp"
                android:layout_marginLeft="20dp"
                android:text="Featured Image 3"
                android:textColor="#fff"
                android:gravity="center"

                android:background="@drawable/border"


                />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_marginLeft="8dp"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt2"
        android:text="Categories"
        android:textSize="15sp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        android:textColor="#0f178f"/>
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical">
    <TextView
    android:layout_width="320dp"
    android:layout_height="90dp"
        android:id="@+id/img3"
       android:text="Category 1"
        android:gravity="center"
        android:textColor="#fff"
        android:layout_margin="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border"/>

    <TextView
        android:layout_margin="20dp"
        android:id="@+id/img4"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:text="Category 2"
        android:gravity="center"
        android:textColor="#fff"
        android:background="@drawable/border" />

    <TextView
        android:layout_margin="20dp"
        android:id="@+id/img5"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:text="Category 3"
        android:gravity="center"
        android:textColor="#fff"
        android:background="@drawable/border"/>

       <TextView
           android:layout_margin="20dp"
           android:id="@+id/img6"
           android:layout_width="320dp"
           android:layout_height="90dp"
           android:text="Category 4"
           android:gravity="center"
           android:textColor="#fff"
           android:background="@drawable/border"/>
    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
    <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
       <include layout="@layout/footers"></include>
   </LinearLayout>

</ScrollView>


</LinearLayout>
